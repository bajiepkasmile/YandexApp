<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:divider="@drawable/divider_vertical"
    android:showDividers="middle">

    <fragment
        android:id="@+id/fragment_artists_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:name="com.domain.yandexapp.ui.fragments.ArtistsListFragment"
        tools:layout="@layout/fragment_artists_list"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_big_cover"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/big_cover_height"
                android:paddingTop="@dimen/spacing_large"
                android:adjustViewBounds="true"/>

            <FrameLayout
                android:id="@+id/fl_artist_details_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>