<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/small_cover_size"
            android:layout_height="@dimen/small_cover_size"
            android:layout_marginRight="@dimen/spacing_normal"
            tools:background="@drawable/cover_placeholder_small"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/black"
                    tools:text="@string/tools.name"/>

                <TextView
                    android:id="@+id/tv_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/default_text"
                    tools:text="@string/tools.genres"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                style="@style/default_text"
                tools:text="@string/tools.statistics"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>